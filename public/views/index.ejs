<!-- For older browsers -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Defines the character set in use -->
        <meta charset="UTF-8">
        <!-- Defines default page scaling for responsive web design -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Decide what version of IE the page is rendered through -->
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <!-- Page title -->
        <title>DTRACT | Login</title>
        <!-- Stylesheet -->
        <link rel="stylesheet" href="/public/css/styles.css">
        <!-- JS Script -->
        <script src="/public/js/script.js"></script>
        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700&display=swap" rel="stylesheet">
        <!-- Icons -->
        <script src="https://kit.fontawesome.com/ba3b736cb2.js" crossorigin="anonymous"></script>
        <!-- Favicon Config -->
        <link rel="apple-touch-icon" sizes="180x180" href="assets/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="assets/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="assets/favicon-16x16.png">
        <link rel="manifest" href="assets/site.webmanifest">
        <link rel="mask-icon" href="assets/safari-pinned-tab.svg" color="#5bbad5">
        <link rel="shortcut icon" href="assets/favicon.ico">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="msapplication-config" content="assets/browserconfig.xml">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
        <header>
            <%- include('./partials/Navbar.ejs') %>
        </header>
        <section class="login_container">
            <div class="login_main">
                <img src="../assets/DTRACT_THUMBNAIL.png" alt="DTRACT Thumbnail" />
                <h1>Login To DTRACT</h1>
                <form class="login_form" method="post" action="/user/login">
                    <label for="form_email">Email:</label>
                    <input type="email" placeholder="Enter Your Email" name="form_email" required id="form_email" />
                    <label for="form_password">Password:</label>
                    <input type="password" placeholder="Enter Your Password" name="form_password" required id="form_password" />
                    <span>Don't have an account? <a href="/signup">Sign Up</a></span>
                    <button type="submit">Login</button>
                </form>
            </div>
        </section>
    </body>
</html>